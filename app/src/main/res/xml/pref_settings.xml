<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/pref_header_appearence">
        <ListPreference
            android:defaultValue="1"
            android:entries="@array/pref_theme_entries"
            android:key="@string/key_theme"
            android:summary="@string/pref_theme_default_summary"
            android:title="@string/pref_theme_title" />

        <android.support.v7.preference.SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="@string/key_full_subjects"
            android:summary="@string/pref_full_subjects_summary"
            android:title="@string/pref_full_subjects_title" />

        <android.support.v7.preference.SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="@string/key_hide_add_schedule"
            android:title="@string/pref_hide_add_schedule_title" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_header_about">

        <Preference
            android:key="@string/key_send_feedback"
            android:title="@string/send_feedback_title" />

        <Preference android:title="@string/privacy_policy">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="@string/privacy_policy_url" />
        </Preference>

        <Preference
            android:key="@string/key_libraries"
            android:title="@string/settings_libraries_title" />

        <Preference
            android:key="@string/key_about"
            android:selectable="false"
            android:title="@string/app_version_title" />
    </PreferenceCategory>
</android.support.v7.preference.PreferenceScreen>
