<resources>
    <style name="MsluTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarTheme">@style/MsluTheme.AppBarOverlay</item>
        <item name="preferenceTheme">@style/MsluTheme.PreferenceThemeOverlay</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">@color/nav_bar</item>
        <item name="android:navigationBarDividerColor">@color/nav_bar_divider</item>
    </style>

    <style name="MsluTheme.NoActionBar" parent="MsluTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">@color/nav_bar</item>
        <item name="android:navigationBarDividerColor">@color/nav_bar_divider</item>
    </style>

    <style name="MsluTheme.NoActionBarTransparentStatusBar" parent="MsluTheme.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@color/surface</item>
        <item name="android:navigationBarColor">@color/nav_bar</item>
        <item name="android:navigationBarDividerColor">@color/nav_bar_divider</item>
    </style>

    <style name="MsluTheme.LaunchScreen" parent="MsluTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="android:navigationBarColor">@color/nav_bar_launch_screen</item>
    </style>
</resources>
