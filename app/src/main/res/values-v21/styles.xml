<resources>

    <style name="MsluTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="actionBarTheme">@style/MsluTheme.AppBarOverlay</item>
        <item name="alertDialogTheme">@style/MsluTheme.Dialog.Alert</item>
        <item name="preferenceTheme">@style/MsluTheme.PreferenceThemeOverlay</item>
        <item name="snackbarStyle">@style/MsluTheme.Snackbar</item>
        <item name="snackbarTextViewStyle">@style/MsluTheme.Snackbar.TextView</item>
        <item name="snackbarButtonStyle">@style/MsluTheme.Snackbar.Button</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>

    <style name="MsluTheme.NoActionBarTransparentStatusBar" parent="MsluTheme.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@color/surface</item>
    </style>

    <style name="MsluTheme.LaunchScreen" parent="MsluTheme.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="MsluTheme.ActionModeButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/transparent</item>
    </style>
</resources>
