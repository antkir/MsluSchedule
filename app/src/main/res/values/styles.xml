<resources>
    <style name="MsluTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarTheme">@style/MsluTheme.AppBarOverlay</item>
        <item name="preferenceTheme">@style/MsluTheme.PreferenceThemeOverlay</item>
    </style>

    <style name="MsluTheme.PreferenceThemeOverlay" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="preferenceCategoryStyle">@style/MsluTheme.PreferenceCategory</item>
    </style>

    <style name="MsluTheme.PreferenceCategory">
        <item name="layout">@layout/pref_category_layout</item>
        <item name="android:shouldDisableView">false</item>
        <item name="android:selectable">false</item>
    </style>

    <style name="MsluTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MsluTheme.NoActionBarTransparentStatusBar" parent="MsluTheme.NoActionBar">
        <item name="android:windowBackground">@color/surface</item>
    </style>

    <style name="MsluTheme.LaunchScreen" parent="MsluTheme.NoActionBarTransparentStatusBar">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="MsluTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="MsluTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="MsluTheme.ActionModeButton" parent="Widget.AppCompat.Button.Borderless" />

    <style name="MsluTheme.Dialog.Alert" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimaryLight</item>
        <item name="android:windowBackground">@drawable/rounded_corners_rect</item>
        <item name="materialButtonStyle">@style/MsluTheme.ActionModeButton</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_zoom_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_zoom_out</item>
    </style>

</resources>
