<resources>

    <style name="MsluTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="actionBarTheme">@style/MsluTheme.AppBarOverlay</item>
        <item name="alertDialogTheme">@style/MsluTheme.Dialog.Alert</item>
        <item name="preferenceTheme">@style/MsluTheme.PreferenceThemeOverlay</item>
        <item name="snackbarStyle">@style/MsluTheme.Snackbar</item>
        <item name="snackbarTextViewStyle">@style/MsluTheme.Snackbar.TextView</item>
        <item name="snackbarButtonStyle">@style/MsluTheme.Snackbar.Button</item>
    </style>

    <style name="MsluTheme.PreferenceThemeOverlay" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="preferenceCategoryStyle">@style/MsluTheme.PreferenceCategory</item>
    </style>

    <style name="MsluTheme.PreferenceCategory">
        <item name="layout">@layout/pref_category_layout</item>
        <item name="android:shouldDisableView">false</item>
        <item name="android:selectable">false</item>
    </style>

    <style name="MsluTheme.NoActionBar" parent="MsluTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MsluTheme.NoActionBarTransparentStatusBar" parent="MsluTheme.NoActionBar">
        <item name="android:windowBackground">@color/surface</item>
    </style>

    <style name="MsluTheme.LaunchScreen" parent="MsluTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="MsluTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorSurface">@color/colorPrimary</item>
        <item name="colorOnSurface">@color/app_bar_text</item>
    </style>

    <style name="MsluTheme.AppBarOverlay.NoActionBar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" >
        <item name="colorPrimary">@color/surface</item>
    </style>

    <style name="MsluTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" >
        <item name="colorSurface">@color/surface</item>
    </style>

    <style name="MsluTheme.ActionModeButton" parent="Widget.MaterialComponents.Button" />

    <style name="MsluTheme.Dialog.Alert" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="android:windowBackground">@drawable/rounded_corners_rect</item>
        <item name="materialButtonStyle">@style/MsluTheme.ActionModeButton</item>
        <item name="backgroundInsetStart">0dp</item>
        <item name="backgroundInsetEnd">0dp</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_zoom_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_zoom_out</item>
    </style>

    <style name="MsluTheme.Chip.Filter" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:checkable">true</item>
        <item name="checkedIconVisible">true</item>
        <item name="chipBackgroundColor">@color/colorAccent</item>
        <item name="android:textAppearance">@style/MsluTheme.Chip.Text.Appearance</item>
    </style>

    <style name="MsluTheme.Chip.Text.Appearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textColor">@color/chip_text</item>
    </style>

    <style name="MsluTheme.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="actionTextColorAlpha">1.0</item>
        <item name="backgroundTint">@color/snackbar_surface</item>
    </style>

    <style name="MsluTheme.Snackbar.TextView" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/snackbar_text</item>
    </style>

    <style name="MsluTheme.Snackbar.Button" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>
